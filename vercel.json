{
  "framework": "astro",
  "rewrites": [
    { "source": "/blog/:path*", "destination": "/blog/:path*" },
    { "source": "/tools/:path*", "destination": "/tools/:path*" },
    { "source": "/", "destination": "https://authentic-humor-170672.framer.app/" },
    { "source": "/:path*", "destination": "https://authentic-humor-170672.framer.app/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "same-origin" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
      ]
    }
  ]
}
